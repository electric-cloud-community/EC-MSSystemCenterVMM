<project name="EC-MSSystemCenterVMM" default="package" basedir=".">
	<description>
        Build the EC-MSSystemCenterVMM plugin
    </description>

    <property name="buildconfigdir" value="../Plugin-In-A-Box/scripts" />
    
	<!-- plugin specific properties -->
	<property name="pluginKey" value="EC-MSSystemCenterVMM" />
	<property name="pluginVersion" value="1.0" />
	<property name="gwtModules" value="ecplugins.hyperv.ConfigurationManagement" />
    <property name="package.export.src" value="hyperv.srcs"/>

    <import file="${buildconfigdir}/buildTargets.xml"/>

    <!-- Package sources for exported utility classes. -->
    <fileset id="hyperv.srcs" dir="${dir.src}">
      <include name="**/PluginConstants.java"/>
      <include name="**/HyperVConfigList.java"/>
      <include name="**/HyperVConfigListLoader.*"/>
    </fileset>
</project>
